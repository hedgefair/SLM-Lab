{
  "sarsa_cartpole": {
    "agent": [{
      "name": "SARSA",
      "algorithm": {
        "name": "SARSA",
        "action_policy": "boltzmann",
        "action_policy_update": "linear_decay",
        "explore_var_start": 1.5,
        "explore_var_end": 0.3,
        "explore_anneal_epi": 40,
        "gamma": 0.99,
        "training_frequency": 32,
        "num_epis_to_collect": 1,
      },
      "memory": {
        "name": "OnPolicyReplay",
      },
      "net": {
        "type": "MLPNet",
        "hid_layers": [64],
        "hid_layers_activation": "relu",
        "optim": {
          "name": "Adam",
          "lr": 0.02
        },
        "decay_lr": true,
        "decay_lr_frequency": 800,
        "decay_lr_min_timestep": 1000
      }
    }],
    "env": [{
      "name": "CartPole-v0",
      "max_timestep": null,
      "max_episode": 300
    }],
    "body": {
      "product": "outer",
      "num": 1
    },
    "meta": {
      "max_session": 1,
      "max_trial": 1,
      "train_mode": true
    },
    "search": {
      "agent": [{
        "algorithm": {
          "gamma__uniform": [0.9, 0.9999],
          "training_frequency__choice": [8, 16, 32, 64, 128],
        },
        "net": {
          "optim": {
            "lr__uniform": [0.001, 0.1]
          }
        }
      }]
    }
  }
}
